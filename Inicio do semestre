nota1 = float(input("digite NOTA1:"))
nota2 = float(input("digite NOTA2:"))
media = (nota1+nota2)/2
if media >= 7.0:
    print("Aprovado")
elif media >= 5.0:
    print ("em recupeção")
else:
    print("reprovado")
