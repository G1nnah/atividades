idade = int(input("Digite sua idade:"))
if idade >= 0 and idade <=12:
    print("Voce é criança.")
elif idade>=13 and idade <= 17:
    print("Voce é adolescente.")
elif idade>=18 and idade <= 59:
    print("Voce é adulto.")
elif idade>= 60:
    print("Voce é idoso.")
else:
    print("Voce nao existe.")
